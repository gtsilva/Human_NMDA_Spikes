 COMMENTBiexponential single synaptic activation that occurs at a user-specified time.The conductance varies with membrane potential to emulate NMDA-gated conductance.Based on syn_g.modENDCOMMENT					       NEURON {	POINT_PROCESS nmda	RANGE onset, tau0, tau1, gmax, e, inmda, gnmda	NONSPECIFIC_CURRENT inmda}UNITS {	(nA) = (nanoamp)	(mV) = (millivolt)	(umho) = (micromho)}PARAMETER {	onset=2  (ms)	tau0=2 (ms)	tau1=100 (ms)	gmax=0.0001 (umho)	e=5	 (mV)	v	 (mV)	nmg = 0.25 (1) : eta*[Mg]o for eta = 0.25 (/mM) and [Mg]o = 1 mM	  : 0.33 used in Polsky's glutamate.mod	  : Zador et al. 1990 assumed eta = 0.33 (/mM)	gamma = 0.1 (/mV) : .08 used in Polsky's glutamate.mod	  : Zador et al. 1990 used 0.06 (/mV)}ASSIGNED { inmda (nA)  gnmda (umho) }LOCAL   a[2]LOCAL   tpeakLOCAL   adjustLOCAL   ampLOCAL 	zBREAKPOINT {        gnmda = cond(t)	inmda = gnmda*(v - e)}FUNCTION cond(x(ms))(umho) {	tpeak=tau0*tau1*log(tau0/tau1)/(tau0-tau1)	adjust=1/((1-exp(-tpeak/tau0))-(1-exp(-tpeak/tau1)))	amp=adjust*gmax	if (x < onset) {		cond = 0	}		else {		a[0]=1-exp(-(x-onset)/tau0)		a[1]=1-exp(-(x-onset)/tau1):		cond = amp*(a[0]-a[1])		cond = (gmax*(a[0]-a[1])*(1-(1/(1+exp((v*.16)+7)))))	}}